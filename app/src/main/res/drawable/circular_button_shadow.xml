<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#B0000000" /> <!-- Color de la sombra -->
            <size android:width="100dp" android:height="100dp"/> <!-- Tamaño de la sombra -->
        </shape>
    </item>

    <!-- Fondo del botón con relleno -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo del botón -->
        </shape>
    </item>

</layer-list>
